@model UserRoles

@{
    ViewData["Title"] = "Edytuj role";
    ViewData["PageTitle"] = $"Edytuj role: {Model.User.Email}";
}

<div class="card form-card">
    <div class="card-body">
        <form asp-action="EditRoles" method="post" class="vstack gap-3">
            <input type="hidden" name="userId" value="@Model.User.Id" />

            <div>
                <h5 class="mb-3">Przypisane role:</h5>

                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedRoles" value="@role.Name"
                               @(Model.UsersRoles.Contains(role.Name) ? "checked" : "") />
                        <label class="form-check-label">@role.Name</label>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a asp-action="Users" class="btn btn-outline-secondary">Powrót</a>
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </div>
        </form>
    </div>
</div>
