@model System_Rezerwacji.Models.Service

@{
    ViewData["Title"] = "Nowa usługa";
    ViewData["PageTitle"] = "Dodaj nową usługę";
}

<div class="card form-card">
    <div class="card-body">
        <form asp-action="Create" class="vstack gap-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div>
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Duration" class="form-label"></label>
                <input asp-for="Duration" type="time" step="60" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Powrót</a>
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
