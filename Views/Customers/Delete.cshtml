@model System_Rezerwacji.Models.Customer

@{
    ViewData["Title"] = "Usuń klienta";
    ViewData["PageTitle"] = "Usuń klienta";
}

<div class="card form-card border-danger-subtle">
    <div class="card-body">
        <div class="alert alert-warning">
            <strong>Uwaga!</strong> Ta operacja trwale usunie dane klienta.
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-4 col-md-3 fw-semibold">@Html.DisplayNameFor(m => m.FullName)</dt>
            <dd class="col-sm-8 col-md-9">@Model.FullName</dd>

            <dt class="col-sm-4 col-md-3 fw-semibold">@Html.DisplayNameFor(m => m.PhoneNumber)</dt>
            <dd class="col-sm-8 col-md-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-4 col-md-3 fw-semibold">@Html.DisplayNameFor(m => m.Email)</dt>
            <dd class="col-sm-8 col-md-9">@Model.Email</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-end gap-2">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="CustomerID" />
            <button type="submit" class="btn btn-danger">Usuń</button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
    </div>
</div>
