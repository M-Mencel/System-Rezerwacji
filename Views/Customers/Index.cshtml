@model IEnumerable<System_Rezerwacji.Models.Customer>

@{
    ViewData["Title"] = "Klienci";
    ViewData["PageTitle"] = "Lista klientów";
}

<div class="card">
    <div class="card-body">
        @if (User.Identity?.Name == null)
        {
            <div class="d-flex justify-content-end mb-3">
                <a asp-action="Create" class="btn btn-primary">Nowy klient</a>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="empty-state">Brak klientów w systemie.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.FullName)</th>
                            <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                            <th class="text-end">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.CustomerID" class="btn btn-outline-primary">Szczegóły</a>
                                        <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-outline-secondary">Edytuj</a>
                                        <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-outline-danger">Usuń</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
