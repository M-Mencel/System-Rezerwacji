@model System_Rezerwacji.Models.Reservation
@{
    ViewData["Title"] = "Edytuj rezerwację";
    ViewData["PageTitle"] = "Edycja rezerwacji";
}

<div class="card form-card">
    <div class="card-body">
        <form asp-action="Edit" class="vstack gap-3">
            <input type="hidden" asp-for="ReservationID" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div>
                <label asp-for="ReservationDate" class="form-label"></label>
                <input asp-for="ReservationDate" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="CustomerID" class="form-label"></label>
                <select asp-for="CustomerID" class="form-select" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="ServiceID" class="form-label"></label>
                <select asp-for="ServiceID" class="form-select" asp-items="ViewBag.ServiceID"></select>
                <span asp-validation-for="ServiceID" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
